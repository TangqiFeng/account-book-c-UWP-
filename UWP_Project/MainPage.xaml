<Page
    x:Class="UWP_Project.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_Project"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="spHeader" VerticalAlignment="Top" Height="Auto" Background="LightGreen" Grid.Row="0">
            <TextBlock x:Name="tblTitle" HorizontalAlignment="Center" 
                       VerticalAlignment="Center" FontSize="40" Text="Account Book"></TextBlock>
        </StackPanel>

        <StackPanel x:Name="spMain" Grid.Row="1" Visibility="Collapsed" Background="Azure">
            <Button x:Name="btnToAddPage" HorizontalAlignment="Center" VerticalAlignment="Top"
                    Width="200" Height="50" Click="btnToAddPage_Click"
                    Margin="0,80,0,0" Content="Add Items" FontSize="30" FontStyle="Italic"></Button>
            <Button x:Name="btnToSearchPage" HorizontalAlignment="Center" VerticalAlignment="Top"
                    Width="200" Height="50" 
                    Margin="0,80,0,0" Content="Add Items" FontSize="30" FontStyle="Italic"></Button>
        </StackPanel>

        <StackPanel x:Name="spAdd" Grid.Row="1" Visibility="Visible" Background="Azure">
            <TextBlock Text="ADD ITEM" FontSize="25" FontStyle="Italic" Margin="10,10,0,0"></TextBlock>
            <TextBlock Text="date :" Margin="40,10,0,0" FontSize="18"></TextBlock>
            <CalendarDatePicker x:Name="arrivalCalendarDatePicker" Margin="40,5,0,0"/>
            <TextBlock Text="type :" Margin="40,5,0,0" FontSize="18"></TextBlock>
            <StackPanel x:Name="spChooseType" Margin="40,5,0,0">
                <RadioButton Content="income ( + )" Tag="income" IsChecked="True"/>
                <RadioButton Content="expenditure ( - )" Tag="expenditure"/>
            </StackPanel>
            <TextBlock Text="describtion :" Margin="40,5,0,0" FontSize="18"></TextBlock>
            <TextBox Height="50" Width="280" Margin="40,5,0,0" HorizontalAlignment="Left" TextWrapping="Wrap"></TextBox>
            <TextBlock Text="value :" Margin="40,5,0,0" FontSize="18"></TextBlock>
            <StackPanel x:Name="spChooseCurrency" Orientation="Horizontal">
                <TextBox x:Name="txtValue" HorizontalAlignment="Left" Margin="40,5,0,0" Width="180" Height="20"></TextBox>
                <ComboBox Margin="10,5,0,0">
                    <ComboBoxItem Tag="EUR" Content="€  (EUR)" IsSelected="True"></ComboBoxItem>
                    <ComboBoxItem Tag="USD" Content="$  (USD)"></ComboBoxItem>
                    <ComboBoxItem Tag="GBP" Content="￡ (GBP)"></ComboBoxItem>
                    <ComboBoxItem Tag="RMB" Content="¥  (RMB)"></ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <TextBlock Text="location :" Margin="40,5,0,0" FontSize="18"></TextBlock>
            <TextBox x:Name="txtLocation" HorizontalAlignment="Left" Margin="40,5,0,0" Width="180" Height="20"></TextBox>
            <Button x:Name="btnGetLocation" Content="Get Current Location" Margin="40,5,0,0" Click="btnGetLocation_Click"></Button>

        </StackPanel>

        <StackPanel x:Name="spFoot" VerticalAlignment="Bottom" Grid.Row="2">
            <Grid Background="Beige" Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button x:Name="btnToHomePage" Height="30" Width="100" HorizontalAlignment="Center"
                        Grid.Column="0" BorderThickness="0" Background="LightYellow" Content="HOME"
                        Click="btnToHomePage_Click"></Button>
                <Button x:Name="btnToSetPage" Height="30" Width="100" HorizontalAlignment="Center" 
                        Grid.Column="1" BorderThickness="0" Background="LightYellow" Content="SETTING"></Button>
            </Grid>
        </StackPanel>
        

    </Grid>
</Page>
